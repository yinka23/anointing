<!-- Container (Contact Section) -->
<div id="contact" class="container">
<div class="page-header"><h4><span class="glyphicon glyphicon-phone-alt"></span>&nbsp;We would like to hear from you !!!</h4></div>
  
<div class="row">
    <div class="col-md-4">
<strong>Mailing Address:</strong>
<address>
<em>Annointed Blessing Commercial Cleaning and Kitchen Cleaning Specialist LLC<br />
8316 Zane Ave N, Suit #208 <br />
Brooklyn Park, MN 55443<br />
</address></em>
    </div>
    <div class="row">
  <div class="col-md-9 col-md-offset-2">
    <div class="well">
      <%= form_for @contact do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
</div>
        <div class="form-group">
          <%= f.label :comments %>
          <%= f.text_area :comments, class: 'form-control' %>
        </div>
        <%= f.submit 'Post it', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>
</div>

<div id="googleMap"></div>

<!-- Add Google Maps -->
<script src="http://maps.googleapis.com/maps/api/js"></script>
<script>
var myCenter = new google.maps.LatLng(45.10993, -93.306557);

function initialize() {
var mapProp = {
center:myCenter,
zoom:12,
scrollwheel:false,
draggable:false,
mapTypeId:google.maps.MapTypeId.ROADMAP
};

var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);

var marker = new google.maps.Marker({
position:myCenter,
});

marker.setMap(map);
}

google.maps.event.addDomListener(window, 'load', initialize);
</script>
